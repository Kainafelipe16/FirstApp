<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/lblNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KainÃ£"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/lblIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade: "
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:textSize="10sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/lblFaixaEtaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faixa: "
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFaixaetaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/lblSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo: "
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/imgFem"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/fem" />

        <ImageView
            android:id="@+id/imgMasc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/masc" />
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>